<table width="100%" border="0" align="center" cellpadding="0" cellspacing="0">
  <!-- START HEADER/BANNER -->
  <tbody>
    <tr>
      <td align="center">
        <table
          class="col-600"
          width="600"
          border="0"
          align="center"
          cellpadding="0"
          cellspacing="0"
        >
          <tbody>
            <tr>
              <td
                align="center"
                valign="top"
                background="https://designmodo.com/demo/emailtemplate/images/header-background.jpg"
                bgcolor="#66809b"
                style="background-size:cover; background-position:top;height:400;"
              >
                <table
                  class="col-600"
                  width="600"
                  height="400"
                  border="0"
                  align="center"
                  cellpadding="0"
                  cellspacing="0"
                >
                  <tbody>
                    <tr>
                      <td height="40"></td>
                    </tr>

                    <tr>
                      <td align="center">
                        <img
                          style="display:block; line-height:0px; font-size:0px; border:0px;"
                          src="https://i.goopics.net/ucypca.png"
                          width="100"
                          height="100"
                          alt="logo"
                        />
                      </td>
                    </tr>

                    <tr>
                      <td
                        align="center"
                        style="font-family: 'Raleway', sans-serif; font-size:37px; color:#ffffff; line-height:24px; font-weight: bold; letter-spacing: 7px;"
                      >
                        ML
                        <span
                          style="font-family: 'Raleway', sans-serif; font-size:37px; color:#ffffff; line-height:39px; font-weight: 300; letter-spacing: 7px;"
                        >Industrie</span>
                      </td>
                    </tr>

                    <!-- Texte de bienvenue et de confirmation -->
                    <tr>
                      <td
                        align="center"
                        style="background-color:#ffffff; font-family: 'Lato', sans-serif; font-size:15px; color:#555555; line-height:24px; font-weight: 300; padding:40px 50px;"
                      >
                        Bonjour
                        <strong>{{user}}</strong>,<br /><br />
                        et bienvenue chez MLIndustrie! Merci pour votre
                        enregistrement. Nous sommes ravis de vous accueillir
                        dans notre réseau. Veuillez cliquer sur le lien
                        ci-dessous pour confirmer votre adresse e-mail et
                        activer votre compte.
                        <!-- Bouton de confirmation -->
                        <div style="text-align:center; padding-top:25px;">
                          <a
                            href="{{confirmationUrl}}"
                            target="_blank"
                            style="font-family: 'Lato', sans-serif; font-size:15px; color:#ffffff; text-decoration:none; padding:10px 25px; background-color:#28a745; border-radius:2px; display:inline-block;"
                          >
                            Confirmer mon adresse email
                          </a>
                        </div>
                        <p style="padding-top:20px;">
                          Si vous n'avez pas demandé cette inscription, veuillez
                          ignorer ce message. Sinon, nous vous attendons avec
                          impatience!
                        </p>
                      </td>
                    </tr>
                    <tr>
                      <td height="50"></td>
                    </tr>
                  </tbody>
                </table>
              </td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
    <!-- END HEADER/BANNER -->
  </tbody>
</table>